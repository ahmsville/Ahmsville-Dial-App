<Window x:Class="Ahmsville_Dial.DialConfiguration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ahmsville_Dial"
        mc:Ignorable="d"
        Title="Dial Configuration" SizeToContent="Width" Height="720" Loaded="configWindow_Loaded">

    <Grid x:Name="pagecontent0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="0"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Height="1"
                   Style="{DynamicResource rectangle}" Margin="20"/>
        <Rectangle Grid.Column="3" Grid.Row="1" VerticalAlignment="Center" Height="1"
                   Style="{DynamicResource rectangle}" Margin="20"/>
        <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock  Text="Dial Variant" VerticalAlignment="Center" Margin="10"
                   Style="{DynamicResource defaulttittle}"/>
            <ComboBox  Width="300" Margin="20,20" SelectionChanged="OpenSettingsPage"  Style="{DynamicResource ComboBoxStyle1}"
                       x:Name="diallist" ItemsSource="{Binding dialinfo}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Width="50" Height="50" Source="{Binding Path=imagepath}" Margin="5"/>
                            <TextBlock Text="{Binding name}" VerticalAlignment="Center" Style="{DynamicResource defaultsubtittle}" Margin="15,5"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>

            </ComboBox>
        </StackPanel>
        <Grid Name="pagecontent" Grid.Column="1" Grid.ColumnSpan="3
              " Grid.Row="2" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="0"/>
            </Grid.RowDefinitions>
            <StackPanel Margin="20" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center">

                <Image x:Name="dialimage" Margin="10"
                       HorizontalAlignment="Center" VerticalAlignment="Top" MaxWidth="350"/>


            </StackPanel>
            <Rectangle Grid.Column="2" Grid.Row="1"  Grid.RowSpan="3"  Width="1" Height="auto"
                       Margin="10" Style="{DynamicResource rectangle}"/>
            <StackPanel Grid.Column="3" Grid.Row="1" x:Name="appinfo"
                            Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" >
                <TextBlock VerticalAlignment="Center" Text="App Name" 
                   Margin="10" Style="{DynamicResource defaultsubtittle}"/>
                <ComboBox  Width="110" 
                 Name="configlist" Margin="10" SelectionChanged="Configlist_SelectionChanged"
                               Style="{DynamicResource ComboBoxStyle1}">
                </ComboBox>
                <TextBox  Width="110" 
                     Margin="10" x:Name="configname"  TextChanged="Set_ConfigID" Template="{DynamicResource TextBoxBase_MyStyle}"/>
                <TextBlock VerticalAlignment="Center" Text="ID" HorizontalAlignment="Left"
                   Margin="20,10,10,10" Style="{DynamicResource defaultsubtittle}"/>
                <TextBox Width="30" 
                 Margin="10" x:Name="configid" TextChanged="Update_ConfigID" PreviewTextInput="ConfigID_PreviewTextInput"
                             Template="{DynamicResource TextBoxBase_MyStyle}"/>
                <TextBlock VerticalAlignment="Center"  Text="App LED"
                   Margin="10" Style="{DynamicResource defaultsubtittle}"/>

                <ComboBox Margin="10" SelectedIndex="0" MouseEnter="Appledcolor_GotFocus" 
                             Width="220" Style="{DynamicResource ComboBoxStyle1}">
                    <StackPanel Orientation="Horizontal" Margin="0,0">
                        <TextBlock Text="Color" Margin="0,0,33,0" VerticalAlignment="Center"/>
                        <ComboBox  Width="120"
                  ItemsSource="{Binding ledcolors}" Style="{DynamicResource ComboBoxStyle1}" x:Name="appledcolor" >
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Width="17" Height="17" Margin="5,0" Fill="{Binding}" />
                                        <TextBlock VerticalAlignment="Center" Text="{Binding}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0">
                        <TextBlock Text="Animation" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <ComboBox ItemsSource="{Binding ledanimations}" Width="120" Style="{DynamicResource ComboBoxStyle1}" x:Name="appledanimation">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                </ComboBox>

                <CheckBox Content="Default"  Margin="10"
                                  VerticalAlignment="Center" x:Name="DefaultConfig"/>
            </StackPanel>

            <ScrollViewer Grid.Column="3" Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="auto" x:Name="settings" MouseLeave="Settings_LostFocus"
                       VerticalAlignment="Top" HorizontalAlignment="Center" Width="auto">
                <Grid ScrollViewer.CanContentScroll="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="0" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="20" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Column="1" Grid.Row="2" 
                             x:Name="knob1" HorizontalAlignment="Center" Margin="10"
                            MouseEnter="Knob1_GotFocus" >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                            <Rectangle Width="200" Height="1" Style="{DynamicResource rectangle}" />
                            <TextBlock VerticalAlignment="Center" Text="First Knob"
                    Margin="10" Style="{DynamicResource defaulttittle}"/>
                            <Rectangle Width="200" Height="1" Style="{DynamicResource rectangle}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Resolution" Margin="20,0" FontWeight="Bold" Style="{DynamicResource defaulttext}"/>
                            <Slider x:Name="knob1res" Minimum="0" Maximum="100" TickFrequency="1" IsSnapToTickEnabled="True"
                                    Width="300" Style="{DynamicResource SliderStyle1}" ValueChanged="knob1res_ValueChanged"/>
                            <TextBlock x:Name="knob1resvalue" Text="Default" Margin="10,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center"  Text="CW"
                   Margin="10" Style="{DynamicResource defaultsubtittle}"/>
                                <CheckBox Margin="20,10" Content="Use APP" VerticalAlignment="Center" Name="use_APP_knob1_CW"
                                  Unchecked="Use_APP_knob1_CW_Checked" Checked="Use_APP_knob1_CW_Checked"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" x:Name="SHORTCUT_knob1_CW">
                                <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter" HorizontalContentAlignment="Center"
                  Margin="10"  x:Name="knob1CW_1"
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}" />

                                <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter" HorizontalContentAlignment="Center"
                  Margin="10"  x:Name="knob1CW_2"
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}"/>

                                <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter"
                  Margin="10"  x:Name="knob1CW_3" HorizontalContentAlignment="Center"
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" x:Name="APP_knob1_CW" Visibility="Collapsed">
                                <RadioButton x:Name="inbuiltfunc_knob1_CW" Margin="10" Content="InBuilt Function" Template="{DynamicResource RadioButton_MyStyle}" 
                                         Checked="Inbuiltfunc_knob1_CW_Checked"/>
                                <RadioButton x:Name="file_knob1_CW" Margin="10" Content="File/Script" Template="{DynamicResource RadioButton_MyStyle}"
                                         Checked="Inbuiltfunc_knob1_CW_Checked"/>
                                <ComboBox ItemsSource="{Binding inappoperations}" DisplayMemberPath="operationname" x:Name="functionscombobox_knob1_CW" Margin="10" Width="200"
                                  Style="{DynamicResource ComboBoxStyle1}"/>


                                <Button Click="Browsebutton_knob1_CW_Click" x:Name="browsebutton_knob1_CW" Margin="10" Width="70
                                " Content="Browse" Template="{DynamicResource ButtonBase_MyStyle}"/>
                            </StackPanel>

                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Foreground="OrangeRed" Text="Function Note" Margin="10,2"></TextBlock>
                            <TextBox Foreground="OrangeRed" x:Name="knob1_CW_funcnote" Width="250" VerticalContentAlignment="Center"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center"  Text="CCW"
                   Margin="10" Style="{DynamicResource defaultsubtittle}"/>
                                <CheckBox Margin="20,10" Content="Use APP" VerticalAlignment="Center" Name="use_APP_knob1_CCW"
                                  Unchecked="Use_APP_knob1_CCW_Checked" Checked="Use_APP_knob1_CCW_Checked"/>

                            </StackPanel>
                            <StackPanel Orientation="Horizontal" x:Name="SHORTCUT_knob1_CCW">
                                <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter" HorizontalContentAlignment="Center"
                  Margin="10"  x:Name="knob1CCW_1"
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}" />

                                <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter" HorizontalContentAlignment="Center"
                  Margin="10"  x:Name="knob1CCW_2"
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}"/>

                                <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter"
                  Margin="10"  x:Name="knob1CCW_3" HorizontalContentAlignment="Center"
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" x:Name="APP_knob1_CCW" Visibility="Collapsed">
                                <RadioButton x:Name="inbuiltfunc_knob1_CCW" Margin="10" Content="InBuilt Function" Template="{DynamicResource RadioButton_MyStyle}" 
                                         Checked="Inbuiltfunc_knob1_CCW_Checked"/>
                                <RadioButton x:Name="file_knob1_CCW" Margin="10" Content="File/Script" Template="{DynamicResource RadioButton_MyStyle}"
                                         Checked="Inbuiltfunc_knob1_CCW_Checked"/>
                                <ComboBox ItemsSource="{Binding inappoperations}" DisplayMemberPath="operationname" x:Name="functionscombobox_knob1_CCW" Margin="10" Width="200"
                                  Style="{DynamicResource ComboBoxStyle1}"/>
                                <Button Click="Browsebutton_knob1_CCW_Click" x:Name="browsebutton_knob1_CCW" Margin="10" Width="70
                                " Content="Browse" Template="{DynamicResource ButtonBase_MyStyle}"/>
                            </StackPanel>

                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Foreground="OrangeRed" Text="Function Note" Margin="10,2"></TextBlock>
                            <TextBox Foreground="OrangeRed" x:Name="knob1_CCW_funcnote" Width="250" VerticalContentAlignment="Center"></TextBox>
                        </StackPanel>
                    </StackPanel>


                    <StackPanel Grid.Column="1" Grid.Row="3" 
                             x:Name="knob2" HorizontalAlignment="Center" Margin="10"
                            MouseEnter="Knob2_GotFocus" >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                            <Rectangle Width="200" Height="1" Style="{DynamicResource rectangle}" />
                            <TextBlock VerticalAlignment="Center" Text="Second Knob"
                    Margin="10" Style="{DynamicResource defaulttittle}"/>
                            <Rectangle Width="200" Height="1" Style="{DynamicResource rectangle}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Resolution" Margin="20,0" FontWeight="Bold" Style="{DynamicResource defaulttext}"/>
                            <Slider x:Name="knob2res" Minimum="0" Maximum="100" TickFrequency="1" IsSnapToTickEnabled="True"
                                    Width="300" Style="{DynamicResource SliderStyle1}" ValueChanged="knob2res_ValueChanged"/>
                            <TextBlock x:Name="knob2resvalue" Text="Default" Margin="10,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center"  Text="CW"
                   Margin="10" Style="{DynamicResource defaultsubtittle}"/>
                                <CheckBox Margin="20,10" Content="Use APP" VerticalAlignment="Center" Name="use_APP_knob2_CW"
                                  Unchecked="Use_APP_knob2_CW_Checked" Checked="Use_APP_knob2_CW_Checked"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" x:Name="SHORTCUT_knob2_CW">
                                <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter" HorizontalContentAlignment="Center"
                  Margin="10"  x:Name="knob2CW_1"
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}" />

                                <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter" HorizontalContentAlignment="Center"
                  Margin="10"  x:Name="knob2CW_2"
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}"/>

                                <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter"
                  Margin="10"  x:Name="knob2CW_3" HorizontalContentAlignment="Center"
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" x:Name="APP_knob2_CW" Visibility="Collapsed">
                                <RadioButton x:Name="inbuiltfunc_knob2_CW" Margin="10" Content="InBuilt Function" Template="{DynamicResource RadioButton_MyStyle}" 
                                         Checked="Inbuiltfunc_knob2_CW_Checked"/>
                                <RadioButton x:Name="file_knob2_CW" Margin="10" Content="File/Script" Template="{DynamicResource RadioButton_MyStyle}"
                                         Checked="Inbuiltfunc_knob2_CW_Checked"/>
                                <ComboBox ItemsSource="{Binding inappoperations}" DisplayMemberPath="operationname" x:Name="functionscombobox_knob2_CW" Margin="10" Width="200"
                                  Style="{DynamicResource ComboBoxStyle1}"/>
                                <Button Click="Browsebutton_knob2_CW_Click" x:Name="browsebutton_knob2_CW" Margin="10" Width="70
                                " Content="Browse" Template="{DynamicResource ButtonBase_MyStyle}"/>
                            </StackPanel>

                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Foreground="OrangeRed" Text="Function Note" Margin="10,2"></TextBlock>
                            <TextBox Foreground="OrangeRed" x:Name="knob2_CW_funcnote" Width="250" VerticalContentAlignment="Center"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center"  Text="CCW"
                   Margin="10" Style="{DynamicResource defaultsubtittle}"/>
                                <CheckBox Margin="20,10" Content="Use APP" VerticalAlignment="Center" Name="use_APP_knob2_CCW"
                                  Unchecked="Use_APP_knob2_CCW_Checked" Checked="Use_APP_knob2_CCW_Checked"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" x:Name="SHORTCUT_knob2_CCW">
                                <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter" HorizontalContentAlignment="Center"
                  Margin="10"  x:Name="knob2CCW_1"
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}" />

                                <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter" HorizontalContentAlignment="Center"
                  Margin="10"  x:Name="knob2CCW_2"
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}"/>

                                <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter"
                  Margin="10"  x:Name="knob2CCW_3" HorizontalContentAlignment="Center"
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" x:Name="APP_knob2_CCW" Visibility="Collapsed">
                                <RadioButton x:Name="inbuiltfunc_knob2_CCW" Margin="10" Content="InBuilt Function" Template="{DynamicResource RadioButton_MyStyle}" 
                                         Checked="Inbuiltfunc_knob2_CCW_Checked"/>
                                <RadioButton x:Name="file_knob2_CCW" Margin="10" Content="File/Script" Template="{DynamicResource RadioButton_MyStyle}"
                                         Checked="Inbuiltfunc_knob2_CCW_Checked"/>
                                <ComboBox ItemsSource="{Binding inappoperations}" DisplayMemberPath="operationname" x:Name="functionscombobox_knob2_CCW" Margin="10" Width="200"
                                  Style="{DynamicResource ComboBoxStyle1}"/>
                                <Button Click="Browsebutton_knob2_CCW_Click" x:Name="browsebutton_knob2_CCW" Margin="10" Width="70
                                " Content="Browse" Template="{DynamicResource ButtonBase_MyStyle}"/>
                            </StackPanel>

                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Foreground="OrangeRed" Text="Function Note" Margin="10,2"></TextBlock>
                            <TextBox Foreground="OrangeRed" x:Name="knob2_CCW_funcnote" Width="250" VerticalContentAlignment="Center"></TextBox>
                        </StackPanel>
                    </StackPanel>




                    <StackPanel Grid.Column="1" Grid.Row="4"  
                            Margin="10" x:Name="capacitivetouch" HorizontalAlignment="Center"
                            MouseEnter="Capacitivetouch_GotFocus">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Rectangle Width="200" Height="1" Style="{DynamicResource rectangle}" />
                            <TextBlock VerticalAlignment="Center" Text="Capacitive Touch"
                   Margin="10" Style="{DynamicResource defaulttittle}"/>
                            <Rectangle Width="200" Height="1" Style="{DynamicResource rectangle}" />
                        </StackPanel>
                        
                            <StackPanel Orientation="Horizontal" >
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center"  Text="Single Tap"
                   Margin="10" Style="{DynamicResource defaultsubtittle}" Name="SingleTap" />
                                    <CheckBox Margin="20,10" Content="Use APP" VerticalAlignment="Center" Name="use_APP_captouch_singletap_SHORTCUT1"
                                  Unchecked="Use_APP_captouch_singletap_SHORTCUT1_checked"  Checked="Use_APP_captouch_singletap_SHORTCUT1_checked"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" x:Name="SHORTCUT1_captouch_singletap">
                                    <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter" HorizontalContentAlignment="Center"
                  Margin="10" HorizontalAlignment="Left" x:Name="singletap_1" 
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}"/>
                                    <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter" HorizontalContentAlignment="Center"
                  Margin="10" HorizontalAlignment="Left" x:Name="singletap_2" 
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}"/>
                                    <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter"
                  Margin="10"  x:Name="singletap_3" HorizontalContentAlignment="Center"
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" x:Name="APP_captouch_singletap_SHORTCUT1" Visibility="Collapsed">
                                    <RadioButton x:Name="inbuiltfunc_captouch_singletap_SHORTCUT1" Margin="10" Content="InBuilt Function" Template="{DynamicResource RadioButton_MyStyle}" 
                                         Checked="Inbuiltfunc_captouch_singletap_SHORTCUT1_Checked"/>
                                    <RadioButton x:Name="file_captouch_singletap_SHORTCUT1" Margin="10" Content="File/Script" Template="{DynamicResource RadioButton_MyStyle}"
                                         Checked="Inbuiltfunc_captouch_singletap_SHORTCUT1_Checked"/>
                                    <ComboBox ItemsSource="{Binding inappoperations}" DisplayMemberPath="operationname" x:Name="functionscombobox_captouch_singletap_SHORTCUT1" Margin="10" Width="200"
                                  Style="{DynamicResource ComboBoxStyle1}"/>
                                    <Button Click="Browsebutton_captouch_singletap_SHORTCUT1_Click"  x:Name="browsebutton_captouch_singletap_SHORTCUT1" Margin="10" Width="70
                                " Content="Browse" Template="{DynamicResource ButtonBase_MyStyle}"/>
                                </StackPanel>
                                <CheckBox Content="Dual Shortcut"  
                           Unchecked="singletap_dualfunc" Checked="singletap_dualfunc" 
                                  VerticalAlignment="Center" x:Name="singletap_dualshortcut"/>

                            </StackPanel>
                            
                     


                        
                            <StackPanel Orientation="Horizontal" Visibility="Collapsed" x:Name="singletap_shortcut2"  HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center"  Text="Shortcut 2"
                   Margin="10" Style="{DynamicResource defaultsubtittle}"/>
                                    <CheckBox Margin="20,10" Content="Use APP" VerticalAlignment="Center" Name="use_APP_captouch_singletap_SHORTCUT2"
                                  Unchecked="Use_APP_captouch_singletap_SHORTCUT2_checked" Checked="Use_APP_captouch_singletap_SHORTCUT2_checked"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" x:Name="SHORTCUT2_captouch_singletap">
                                    <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter" HorizontalContentAlignment="Center"
                  Margin="10" HorizontalAlignment="Left" x:Name="singletap_21" 
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}"/>
                                    <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter" HorizontalContentAlignment="Center"
                  Margin="10" HorizontalAlignment="Left" x:Name="singletap_22" 
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}"/>
                                    <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter"
                  Margin="10"  x:Name="singletap_23" HorizontalContentAlignment="Center"
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" x:Name="APP_captouch_singletap_SHORTCUT2" Visibility="Collapsed">
                                    <RadioButton x:Name="inbuiltfunc_captouch_singletap_SHORTCUT2" Margin="10" Content="InBuilt Function" Template="{DynamicResource RadioButton_MyStyle}" 
                                         Checked="Inbuiltfunc_captouch_singletap_SHORTCUT2_Checked"/>
                                    <RadioButton x:Name="file_captouch_singletap_SHORTCUT2" Margin="10" Content="File/Script" Template="{DynamicResource RadioButton_MyStyle}"
                                         Checked="Inbuiltfunc_captouch_singletap_SHORTCUT2_Checked"/>
                                    <ComboBox ItemsSource="{Binding inappoperations}" DisplayMemberPath="operationname" x:Name="functionscombobox_captouch_singletap_SHORTCUT2" Margin="10" Width="200"
                                  Style="{DynamicResource ComboBoxStyle1}"/>
                                    <Button Click="Browsebutton_captouch_singletap_SHORTCUT2_Click"  x:Name="browsebutton_captouch_singletap_SHORTCUT2" Margin="10" Width="70
                                " Content="Browse" Template="{DynamicResource ButtonBase_MyStyle}"/>
                                </StackPanel>

                            </StackPanel>
                            
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Foreground="OrangeRed" Text="Function Note" Margin="10,2"></TextBlock>
                            <TextBox Foreground="OrangeRed" x:Name="singletap_funcnote" Width="250" VerticalContentAlignment="Center"></TextBox>
                        </StackPanel>
                        
                            <StackPanel Orientation="Horizontal" >
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center"  Text="Double Tap"
                   Margin="10" Style="{DynamicResource defaultsubtittle}" Name="DoubleTap" />
                                    <CheckBox Margin="20,10" Content="Use APP" VerticalAlignment="Center" Name="use_APP_captouch_doubletap_SHORTCUT1"
                                  Unchecked="Use_APP_captouch_doubletap_SHORTCUT1_checked"  Checked="Use_APP_captouch_doubletap_SHORTCUT1_checked"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" x:Name="SHORTCUT1_captouch_doubletap">
                                    <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter" HorizontalContentAlignment="Center"
                  Margin="10" HorizontalAlignment="Left" x:Name="doubletap_1" 
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}"/>
                                    <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter" HorizontalContentAlignment="Center"
                  Margin="10" HorizontalAlignment="Left" x:Name="doubletap_2" 
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}"/>
                                    <ComboBox  Width="110" IsEditable="True" PreviewTextInput="ValidateCharacter"
                  Margin="10"  x:Name="doubletap_3" HorizontalContentAlignment="Center"
                      ItemsSource="{Binding specialkeys}" Style="{DynamicResource ComboBoxStyle1}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" x:Name="APP_captouch_doubletap_SHORTCUT1" Visibility="Collapsed">
